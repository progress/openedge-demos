{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location for all resources."
            },
            "defaultValue": "[resourceGroup().location]"
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "The name of the administrator account when provisioning virtual machines."
            },
            "defaultValue": "azureuser"
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password of the administrator account."
            }
        },
        "OE_Image_externalid": {
            "type": "string",
            "metadata": {
                "description": "The ID of the OpenEdge image."
            }            
        },
        "instanceCount": {
            "type": "string",
            "metadata": {
                "description": "The number of VMs to run in the scale set."
            },
            "defaultValue": "1"
        },
        "packageLocation": {
            "type": "string",
            "metadata": {
                "description": "The URL to the location of the deployment packages."
            },
            "defaultValue": "https://github.com/progress/openedge-demos/releases/download/v1.0.2"
        },
        "DB_Deployment_Package": {
            "type": "string",
            "metadata": {
                "description": "The database deployment package."
            },
            "defaultValue": "db.tar.gz"
        },
        "PAS_Deployment_Package": {
            "type": "string",
            "metadata": {
                "description": "The PASOE deployment package."
            },
            "defaultValue": "pas.tar.gz"
        },
        "WEB_Deployment_Package": {
            "type": "string",
            "metadata": {
                "description": "The WEB UI deployment package."
            },
            "defaultValue": "web.tar.gz"
        }
    },
    "variables": {
        "virtualNetworkName": "[concat(resourceGroup().name, '-vnet')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2017-06-01",
            "name": "[variables('virtualNetworkName')]",
            "location": "[parameters('location')]",
            "tags": {},
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.8.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "default",
                        "properties": {
                            "addressPrefix": "10.8.0.0/24"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "name": "accessvm",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/progress/openedge-demos/azure-quickstart/azure-quickstart/accessvm.template.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetworkExternalId": {
                        "value": "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "name": "loadmaster",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/progress/openedge-demos/azure-quickstart/azure-quickstart/loadmaster.template.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetworkExternalId": {
                        "value": "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "name": "openedge-database",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/progress/openedge-demos/azure-quickstart/azure-quickstart/openedge-database.template.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetworkExternalId": {
                        "value": "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "OE_Image_externalid": {
                        "value": "[parameters('OE_Image_externalid')]"
                    },
                    "DB_Deployment_Package": {
                        "value": "[concat(parameters('packageLocation'), '/', parameters('DB_Deployment_Package'))]"
                    }                    
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "name": "pasoe",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]",
                "[resourceId('Microsoft.Resources/deployments/', 'openedge-database')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/progress/openedge-demos/azure-quickstart/azure-quickstart/openedge-pasoe.template.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "OE_Image_externalid": {
                        "value": "[parameters('OE_Image_externalid')]"
                    },
                    "instanceCount": {
                        "value": "[parameters('instanceCount')]"
                    },
                    "dbHostName": {
                        "value": "[reference('openedge-database').outputs.dbHostName.value]"
                    },
                    "PAS_Deployment_Package": {
                        "value": "[concat(parameters('packageLocation'), '/', parameters('PAS_Deployment_Package'))]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "name": "webserver",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]",
                "[resourceId('Microsoft.Resources/deployments/', 'pasoe')]",
                "[resourceId('Microsoft.Resources/deployments/', 'loadmaster')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/progress/openedge-demos/azure-quickstart/azure-quickstart/webserver.template.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "instanceCount": {
                        "value": "[parameters('instanceCount')]"
                    },
                    "loadMasterIPAddress": {
                        "value": "[reference('loadmaster').outputs.loadMasterIPAddress.value]"
                    },
                    "WEB_Deployment_Package": {
                        "value": "[concat(parameters('packageLocation'), '/', parameters('WEB_Deployment_Package'))]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "LoadMaster": {
            "type": "string",
            "value": "[concat('https://', reference('loadmaster').outputs.loadMasterIPAddress.value, ':8443')]"
        },
        "WebURL": {
            "type": "string",
            "value": "[concat('http://', reference('loadmaster').outputs.loadMasterIPAddress.value, ':80')]"
        },
        "accessVMIPAddress": {
            "type": "string",
            "value": "[reference('accessvm').outputs.publicIPAddress.value]"
        }
    }
}