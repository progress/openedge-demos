{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location for all resources."
            },
            "defaultValue": "[resourceGroup().location]"
        },
        "osDiskType": {
            "type": "string",
            "defaultValue": "Premium_LRS"
        },
        "virtualMachineScaleSetName": {
            "type": "string",
            "defaultValue": "PASOE"
        },
        "singlePlacementGroup": {
            "type": "string",
            "defaultValue": "false"
        },
        "instanceCount": {
            "type": "string",
            "defaultValue": "2"
        },
        "instanceSize": {
            "type": "string",
            "defaultValue": "Standard_B2s"
        },
        "scaleInPolicy": {
            "type": "object",
            "defaultValue": {
                "rules": [
                    "Default"
                ]
            }
        },
        "overprovision": {
            "type": "bool",
            "defaultValue": false
        },
        "upgradePolicy": {
            "type": "string",
            "defaultValue": "Manual"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "platformFaultDomainCount": {
            "type": "string",
            "defaultValue": "1"
        },
        "zone": {
            "type": "array",
            "defaultValue": [
                "1"
            ]
        },
        "OE_Image_externalid": {
            "type": "string"
        },
        "dbHostName": {
            "type": "string"
        },
        "PAS_Deployment_Package": {
            "type": "string",
            "metadata": {
                "description": "The PASOE deployment package."
            }
        }
    },
    "variables": {
        "virtualNetworkName": "[concat(resourceGroup().name, '-vnet')]",
        "networkSecurityGroupName": "pasoe-nsg",
        "namingInfix": "[toLower(substring(concat(parameters('virtualMachineScaleSetName'), uniqueString(resourceGroup().id)), 0, 9))]",
        "customData": "[concat('#!/bin/bash\nexport DEPLOYMENT_PACKAGE=', parameters('PAS_Deployment_Package'), '\nexport HOST=', parameters('dbHostName'), '\ncurl -s https://raw.githubusercontent.com/progress/openedge-demos/azure-quickstart/azure-quickstart/deploy.pas.sh | bash')]",        
        "networkInterfaceConfigurations": [
            {
                "name": "[concat(resourceGroup().name, '-vnet-nic01')]",
                "primary": true,
                "subnetId": "[concat(resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName')), '/subnets/default')]",
                "applicationGatewayBackendAddressPools": [],
                "loadBalancerBackendAddressPools": [],
                "applicationSecurityGroups": [],
                "loadBalancerInboundNatPools": [],
                "enableAcceleratedNetworking": false,
                "nsgName": "[variables('networkSecurityGroupName')]",
                "nsgId": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroupName'))]",
                "pipName": ""
            }
        ]        
    },
    "resources": [
        {
            "apiVersion": "2019-02-01",
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[variables('networkSecurityGroupName')]",
            "location": "[parameters('location')]",
            "tags": {},
            "properties": {
                "securityRules": [
                    {
                        "name": "SSH",
                        "properties": {
                            "description": "Allow SSH",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "22",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 1000,
                            "direction": "Inbound",
                            "sourcePortRanges": [],
                            "destinationPortRanges": [],
                            "sourceAddressPrefixes": [],
                            "destinationAddressPrefixes": []
                        }
                    },
                    {
                        "name": "AllowAny8810Inbound",
                        "properties": {
                            "description": "Allow access using port 8810",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "8810",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 1010,
                            "direction": "Inbound",
                            "sourcePortRanges": [],
                            "destinationPortRanges": [],
                            "sourceAddressPrefixes": [],
                            "destinationAddressPrefixes": []
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachineScaleSets",
            "apiVersion": "2019-07-01",
            "name": "[parameters('virtualMachineScaleSetName')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', variables('networkSecurityGroupName'))]"
            ],
            "location": "[parameters('location')]",
            "properties": {
                "singlePlacementGroup": "[parameters('singlePlacementGroup')]",
                "virtualMachineProfile": {
                    "storageProfile": {
                        "osDisk": {
                            "createOption": "FromImage",
                            "caching": "ReadWrite",
                            "managedDisk": {
                                "storageAccountType": "[parameters('osDiskType')]"
                            }
                        },
                        "imageReference": {
                            "id": "[parameters('OE_Image_externalid')]"
                        }
                    },
                    "networkProfile": {
                        "copy": [
                            {
                                "name": "networkInterfaceConfigurations",
                                "count": "[length(variables('networkInterfaceConfigurations'))]",
                                "input": {
                                    "name": "[variables('networkInterfaceConfigurations')[copyIndex('networkInterfaceConfigurations')].name]",
                                    "properties": {
                                        "primary": "[variables('networkInterfaceConfigurations')[copyIndex('networkInterfaceConfigurations')].primary]",
                                        "enableAcceleratedNetworking": "[variables('networkInterfaceConfigurations')[copyIndex('networkInterfaceConfigurations')].enableAcceleratedNetworking]",
                                        "ipConfigurations": [
                                            {
                                                "name": "[concat(take(variables('networkInterfaceConfigurations')[copyIndex('networkInterfaceConfigurations')].name, sub(80, length('-defaultIpConfiguration'))), '-defaultIpConfiguration')]",
                                                "properties": {
                                                    "subnet": {
                                                        "id": "[variables('networkInterfaceConfigurations')[copyIndex('networkInterfaceConfigurations')].subnetId]"
                                                    },
                                                    "primary": "[variables('networkInterfaceConfigurations')[copyIndex('networkInterfaceConfigurations')].primary]",
                                                    "applicationGatewayBackendAddressPools": "[variables('networkInterfaceConfigurations')[copyIndex('networkInterfaceConfigurations')].applicationGatewayBackendAddressPools]",
                                                    "loadBalancerBackendAddressPools": "[variables('networkInterfaceConfigurations')[copyIndex('networkInterfaceConfigurations')].loadBalancerBackendAddressPools]",
                                                    "publicIPAddressConfiguration": "",
                                                    "loadBalancerInboundNatPools": "[variables('networkInterfaceConfigurations')[copyIndex('networkInterfaceConfigurations')].loadBalancerInboundNatPools]"
                                                }
                                            }
                                        ],
                                        "networkSecurityGroup": "[if( equals( variables('networkInterfaceConfigurations')[copyIndex('networkInterfaceConfigurations')].nsgId, ''), json('null'),json(concat('{\"id\": \"', variables('networkInterfaceConfigurations')[copyIndex('networkInterfaceConfigurations')].nsgId, '\"}')))]"
                                    }
                                }
                            }
                        ]
                    },
                    "extensionProfile": {
                        "extensions": []
                    },
                    "diagnosticsProfile": {
                        "bootDiagnostics": {
                            "enabled": false
                        }
                    },
                    "osProfile": {
                        "computerNamePrefix": "[variables('namingInfix')]",
                        "adminUsername": "[parameters('adminUsername')]",
                        "adminPassword": "[parameters('adminPassword')]",
                        "customData": "[base64(variables('customData'))]"
                    }
                },
                "orchestrationMode": "Uniform",
                "scaleInPolicy": "[parameters('scaleInPolicy')]",
                "overprovision": "[parameters('overprovision')]",
                "upgradePolicy": {
                    "mode": "[parameters('upgradePolicy')]"
                },
                "platformFaultDomainCount": "[parameters('platformFaultDomainCount')]"
            },
            "sku": {
                "name": "[parameters('instanceSize')]",
                "capacity": "[int(parameters('instanceCount'))]"
            },
            "zones": "[parameters('zone')]"
        }
    ],
    "outputs": {
        "dbHostName": {
            "type": "string",
            "value": "[parameters('dbHostName')]"
        }
    }
}